{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Hear's a Story",
    "license": {
      "name": "undecided"
    }
  },
  "servers": [],
  "paths": {
    "/api/story": {
      "get": {
        "summary": "List all stories",
        "operationId": "listStories",
        "tags": [
          "stories"
        ],
        "parameters": [
        ],
        "responses": {
          "200": {
            "description": "An array of stories",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stories"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new story",
        "operationId": "createStory",
        "tags": [
          "stories"
        ],
	"requestBody": {
          "content": {
            "application/json": {
              "schema": {
		"type": "object",
		"required": [
		  "name"
		],
		"properties": {
		  "name": {
		    "type": "string"
		  },
		  "theme":{
		    "type": "string"
		  }
		}
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successfully created new story",
	    "content": {
	      "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stories"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/story/connect": {
      "get": {
        "summary": "Create a websocket connection to continue story",
        "operationId": "storyConnect",
        "tags": [
          "stories"
        ],
        "parameters": [
          {
            "name": "storyId",
            "in": "query",
            "required": true,
            "description": "story identifier",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "connection accepted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Story"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/statistics": {
      "get": {
        "summary": "Get account statistics",
        "operationId": "getStatistics",
        "tags": [
          "statistics"
        ],
        "responses": {
          "200": {
            "description": "Undecided",
            "content": {
              "application/json": {
                "schema": {
		  "type": "undefined"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/statistics/{story_id}": {
      "get": {
        "summary": "Get statistics about a specific story",
        "operationId": "getStatistics",
        "tags": [
          "statistics"
        ],
	"parameters": [
	  {
            "name": "story_id",
            "in": "path",
            "required": true,
            "description": "story identifier",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Undecided",
            "content": {
              "application/json": {
                "schema": {
		  "type": "undefined"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "Story": {
        "type": "object",
        "required": [
          "id",
          "name"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
	  "theme": {
	    "type": "string"
	  }
        }
      },
      "Stories": {
        "type": "array",
        "maxItems": 100,
        "items": {
          "$ref": "#/components/schemas/Story"
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
